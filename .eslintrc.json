{
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "extends": ["eslint:recommended", "next/core-web-vitals"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "indent": ["error", 4],
        "no-console": ["warn", { "allow": ["warn", "error"] }],
        "no-debugger": "error",
        "no-unused-vars": ["warn"],
        "no-empty-function": "error",
        "no-empty-pattern": "error",
        "no-constant-condition": "error",
        "no-dupe-keys": "error",
        "no-duplicate-imports": "error",
        "no-fallthrough": "error",
        "eqeqeq": "error",
        "curly": ["error", "all"],
        "default-case": "error",
        "dot-notation": "error",
        "no-var": "error",
        "prefer-const": "error",
        "prefer-template": "error",
        "no-undef": "error",
        "no-unsafe-optional-chaining": "error",
        "react/react-in-jsx-scope": "off"
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
